{
  "name": "auto-repuestos-backend",
  "version": "1.0.0",
  "description": "Backend API para aplicaci√≥n AutoRepuestos",
  "main": "server.js",
  "proxy": "http://localhost:5000",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node seeder.js -i",
    "data:destroy": "node seeder.js -d",
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:unit": "jest --testPathPattern=unit --verbose",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:controllers": "jest --testPathPattern=controllers --verbose",
    "test:models": "jest --testPathPattern=models --verbose",
    "test:services": "jest --testPathPattern=services --verbose",
    "test:utils": "jest --testPathPattern=utils --verbose"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.10",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.3",
    "transbank-sdk": "^6.0.0"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.1.1",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true
  }
}